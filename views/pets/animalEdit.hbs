{{! views/pets/animalEdit.hbs }}
<div class="container d-flex justify-content-center align-items-center">
  <div class="container">
    {{! Page Title }}
    <div class="row">
      <h1>Edit the animal profile: </h1>
      <hr />
    </div>

    {{!Edit one animal profile }}
    <form
      action="/pets/{{_id}}/edit"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="row">
        {{! img col }}
        <div class="col">
          <img
            class="img-fluid rounded"
            style=" width: 800px; 
                  height: 450px;"
            src={{animalImage}}
          />
          <div
            class="card text-white p-2 align-items-center bg-secondary"
            style="max-width: 800px"
          >
            <label class="form-label" for="customFile">
              Change animal picture here</label>
            <input
              type="file"
              id="animalImage"
              style="width: 400px;"
              name="animalImage"
              class="form-control"
            />
          </div>

        </div>
        {{! description col }}
        {{! Animal Name }}
        <div class="col">
          <ul class="list-inline">
            <li class="list-inline-item" style="width: 150px">
              <label>Animal Name:</label>
            </li>
            <li class="list-inline-item">
              <input
                type="text"
                class="form-control border border-secondary"
                name="animalName"
                value="{{animalName}}"
                style="width: 300px"
              />
            </li>
          </ul>
          {{!  Animal Type }}
          <ul class="list-inline">
            <li class="list-inline-item" style="width: 150px">
              <label>
                Animal Type:
              </label>
            </li>
            <li class="list-inline-item">
              <input
                type="text"
                class="form-control border border-secondary"
                name="animalType"
                value="{{animalType}}"
                style="width: 300px"
              />
            </li>
          </ul>
          {{! Animal Gender}}
          <ul class="list-inline">
            <li class="list-inline-item" style="width: 150px">
              <label> Gender:</label>
            </li>
            <li class="list-inline-item">
              <input
                type="text"
                class="form-control border border-secondary"
                name="animalGender"
                value="{{animalGender}}"
                style="width: 300px"
              />
            </li>
          </ul>
          {{! Animal Age }}
          <ul class="list-inline">
            <li class="list-inline-item" style="width: 150px">
              <label>
                Animal Age:
              </label>
            </li>
            <li class="list-inline-item">
              <input
                type="number"
                class="form-control border border-secondary"
                name="animalAge"
                value="{{animalAge}}"
                style="width: 300px"
              />
            </li>
          </ul>
          {{! Animal Size  }}
          <ul class="list-inline">
            <li class="list-inline-item" style="width: 150px">
              <label>
                Animal Size:
              </label>
            </li>
            <li class="list-inline-item">
              <input
                type="text"
                class="form-control border border-secondary"
                name="animalSize"
                value="{{animalSize}}"
                style="width: 300px"
              /></li>
          </ul>
          {{! Animal Description }}
          <ul class="list-inline">
            <li class="list-inline-item mb-3" style="width: 150px">
              <p><u>Description:</u></p>
            </li>
            <li class="list-inline-item">
              <textarea
                type="text"
                class="form-control border border-secondary"
                id="description"
                placeholder=""
                name="description"
                style="width: 300px; "
              ></textarea>

            </li>
          </ul>

          {{! button Save changes }}
          <button class="btn btn-success mb-5" type="submit">Save changes</button>
        </div>
      </div>
    </form>
  </div>

</div>